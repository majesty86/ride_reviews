<!DOCTYPE html>
<html>
  <head>
    <title>Ride Reviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'  %>
    <%= stylesheet_link_tag    'application', "https://fonts.googleapis.com/css?family=Racing+Sans+One",  media: 'all' %>
    <%= stylesheet_link_tag    'application', "https://fonts.googleapis.com/css?family=Merriweather|Racing+Sans+One", media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="navigation">
      <div class="navigation__login navigation__add-ride">
        <% if !current_user %>
          <%= link_to "Login", login_path, remote: true, class: "navigation__login-link" %>
        <% else %>
          <%= link_to "Add Ride", new_ride_path, remote: true, class: "navigation__new-ride-link" %>
        <% end %>
      </div>
      <div class="navigation__center-box">
        <%= image_tag("dyna_lowrider2.jpg", alt: "Harley Motorcycle", class: "box--slideshow_image_1") %>
        <%= image_tag("suzuki_on_road.jpg", alt: "Suzuki Motorcycle", class: "box--slideshow_image_2") %>
        <%= image_tag("ducati_on_road.jpg", alt: "Ducati Motorcycle", class: "box--slideshow_image_3") %>
      </div>
      <div class="navigation__registration navigation__user-rides">
        <% if !current_user %>
          <%= link_to "Register", registration_path, remote: true, class: "navigation__registration-link" %>
        <% else %>
          <p>Hi, <%= current_user.username  %>!</p>
          <p><%= current_user.username %>'s Rides</p>
          <%= link_to "Logout", logout_path %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
