<!DOCTYPE html>
<html>
  <head>
    <title>Ride Reviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="navigation">
      <div class="navigation__login navigation__user-rides">
        <% if !current_user %>
          <%= link_to "Login", login_path, remote: true, class: "navigation__login-link" %>
        <% else %>
          <p><%= current_user.username %>'s Rides</p>
        <% end %>
      </div>
      <div class="navigation__center-box">
        <% if current_user %>
          <%= link_to "Add Ride", new_ride_path, remote: true, class: "navigation__center-box-new-ride-link" %>
        <% else %>
          <p class="pending-image">Image will go here...</p>
        <% end %>
      </div>
      <div class="navigation__registration">
        <% if !current_user %>
          <%= link_to "Register", registration_path, remote: true, class: "navigation__registration-link" %>
        <% else %>
          <p>Hi, <%= current_user.username  %>!</p>
          <%= link_to "Logout", logout_path %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
