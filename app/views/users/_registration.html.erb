<%= form_with model: @user, class: "registration-form" do |f| %>
  <h2>Register</h2>
  <br>
  <%= f.text_field :username, placeholder: "Username", class: "registration-form__username" %><br>
  <%= f.text_field :email, placeholder: "Email" %><br>
  <%= f.password_field :password, placeholder: "Password" %><br>
  <%= f.submit "Register", class: "registration-form__submit" %>
<% end %>

<%= render 'errors' if @errors %>